<tr>
	<td align="center" class="filaclara">
{foreach from=$form_elements item=form_element}
	{if $form_element.label == 'text'}
		<label for="{$form_element.id}">{$form_element.label}</label>
		<input type="text" id="{$form_element.id}" name="{$form_element.name}" />
	{/if}
	{if $form_element.label == 'textarea'}
		<label for="{$form_element.id}">{$form_element.label}</label>
		<textarea id="{$form_element.id}" name="{$form_element.name}"></textarea>
	{/if}
{/foreach}
	</td>
</tr>

